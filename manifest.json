{
	"action": {
		"default_icon": {
			"19": "img/c_19x19.png",
			"38": "img/c_64x64.png"
		},
		"default_title": "CopyURLs to clipboard",
		"default_popup": "simple_popup.html"
	},
	"description": "Copy open tabs URLs to clipboard. Paste multiple URLs to new tabs.",
	"icons": {
		"128": "img/c_128x128.png"
	},
	"background": {
		"service_worker": "background.js"
	},
	"name": "Copy URLs",
	"permissions": ["tabs", "clipboardRead", "clipboardWrite", "notifications", "offscreen", "storage"],
	"host_permissions": ["http://*/*", "https://*/*"],
	"content_security_policy": {
		"extension_pages": "script-src 'self'; object-src 'self'"
	},
	"version": "3.0",
	"manifest_version": 3
}
